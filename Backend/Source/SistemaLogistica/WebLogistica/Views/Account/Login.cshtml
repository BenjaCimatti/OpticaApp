@model WebLogistica.Web.Models.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .form-signin {
    margin: 0 auto;
    max-width: 330px;
    padding: 15px;
}
</style>

<div class="container-fluid">

    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Optica Elena
            </h1>
        </div>
    </div>
    <!-- /.row -->

    <div class="row">
        <div class="col-lg-6">
            @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-signin", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h2 class="form-signin-heading">Inicio de Sesión</h2>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Usuario" })
                @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                <br />
                <br />
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Clave" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                <br />
                <br />
                <input type="submit" value="Iniciar Sesión" class="btn btn-lg btn-primary btn-block" />
            }
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
        </div>
        <div class="col-lg-6" >
                <img src="@Url.Content(Model.LogoImg)" class="img-responsive center-block"/>
        </div>
</div>
</div>
<!-- /.container-fluid -->
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

